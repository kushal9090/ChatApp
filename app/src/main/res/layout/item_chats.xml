<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userIV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/hello" />

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kushal"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/userIV"
        android:layout_toRightOf="@+id/userIV"
        android:layout_toEndOf="@+id/userIV" />

    <TextView
        android:id="@+id/messageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:layout_below="@+id/nameTV"
        android:layout_toRightOf="@+id/userIV"
        android:layout_toEndOf="@+id/userIV" />

    <TextView
        android:id="@+id/lastMessageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:3 PM"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/chat_time_color"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_below="@+id/lastMessageTV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"
        android:background="@drawable/round_corner_green"
        android:textStyle="bold"
        android:gravity="center"/>


</RelativeLayout>